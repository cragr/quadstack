[Unit]
Description=guacd container
After=network-online.target
Wants=network-online.target

[Container]
ContainerName=guacd
Image=docker.io/guacamole/guacd:1.6.0
Network=appnet

Volume={{INSTALL_DIR}}/guacd:/etc/guacamole:Z,U

[Service]
Restart=always

[Install]
WantedBy=default.target
