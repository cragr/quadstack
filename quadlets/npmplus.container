[Unit]
Description=NPM Plus Container
After=network-online.target
Wants=network-online.target

[Container]
ContainerName=npmplus
Image=docker.io/zoeyvid/npmplus:latest
Network=appnet

Volume={{INSTALL_DIR}}/npmplus:/data:Z,U

PublishPort=443:443
PublishPort=81:81

Environment=TZ=America/New_York


[Service]
Restart=always

[Install]
WantedBy=multi-user.target